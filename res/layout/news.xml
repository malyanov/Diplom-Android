<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"  android:background="@drawable/background">
<LinearLayout android:layout_width="fill_parent" android:layout_height="432dp">
 <ListView android:id="@+id/NewsList" android:background="#FF909090" android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="2">         
 </ListView>
</LinearLayout>
 <LinearLayout android:orientation="horizontal" android:gravity="center_horizontal" android:background="@drawable/bottombar"  android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
  <ImageButton android:id="@+id/RefreshNewsBtn" android:src="@drawable/refresh" android:background="@drawable/button" android:textSize="10dp"   android:layout_width="46dp" android:layout_height="46dp"/>  
  <ImageButton android:id="@+id/CloseNewsBtn" android:src="@drawable/delete_icon" android:background="@drawable/button" android:textSize="10dp"   android:layout_width="46dp" android:layout_height="46dp"/>
 </LinearLayout>
</LinearLayout>